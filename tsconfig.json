{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": false,
    "outDir": "dist",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["./src"]
}
